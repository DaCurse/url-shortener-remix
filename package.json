{
  "name": "remix-app-template",
  "description": "A URL Shortener made with Remix",
  "license": "GPL-3.0",
  "author": "DaCurse",
  "sideEffects": false,
  "scripts": {
    "build": "remix build",
    "dev": "remix watch",
    "format": "prettier --write \"**/*.+(js|jsx|json|yml|yaml|css|less|scss|ts|tsx|md|mdx)\"",
    "postinstall": "remix setup node",
    "prepare": "husky install",
    "start": "cross-env NODE_ENV=production node server/index.js",
    "start:dev": "cross-env NODE_ENV=development node server/index.js"
  },
  "lint-staged": {
    "*.+(js|jsx|json|yml|yaml|css|less|scss|ts|tsx|md|mdx)": "prettier --write"
  },
  "dependencies": {
    "@remix-run/express": "^1.1.3",
    "@remix-run/react": "^1.1.3",
    "compression": "^1.7.4",
    "cross-env": "^7.0.3",
    "express": "^4.17.1",
    "morgan": "^1.10.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remix": "^1.1.3"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.1.3",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "husky": "^7.0.4",
    "prettier": "^2.5.1",
    "typescript": "^4.1.2"
  },
  "engines": {
    "node": ">=14"
  }
}
