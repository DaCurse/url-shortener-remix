{
  "name": "url-shortener-remix",
  "description": "A URL Shortener made with Remix",
  "license": "GPL-3.0",
  "author": "DaCurse",
  "sideEffects": false,
  "scripts": {
    "build": "remix build",
    "dev": "remix build && run-p dev:*",
    "dev:node": "cross-env NODE_ENV=development nodemon ./server --watch ./server",
    "dev:remix": "remix watch",
    "start": "cross-env NODE_ENV=production node ./server",
    "format": "prettier --write .",
    "lint": "eslint --cache --ext js,jsx,ts,tsx .",
    "prepare": "husky install"
  },
  "lint-staged": {
    ".": "prettier --write",
    "*.{js,jsx,ts,tsx}": "eslint --cache --fix"
  },
  "dependencies": {
    "@emotion/cache": "^11.7.1",
    "@emotion/react": "^11.8.2",
    "@emotion/server": "^11.4.0",
    "@emotion/styled": "^11.8.1",
    "@mui/icons-material": "^5.5.0",
    "@mui/material": "^5.5.0",
    "@prisma/client": "3.12.0",
    "@remix-run/express": "^1.4.0",
    "@remix-run/node": "^1.4.0",
    "@remix-run/react": "^1.4.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "morgan": "^1.10.0",
    "nanoid": "^3.3.1",
    "nprogress": "^0.2.0",
    "prisma": "^3.12.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "zod": "^3.13.4"
  },
  "devDependencies": {
    "@babel/core": "^7.17.5",
    "@babel/preset-react": "^7.16.7",
    "@remix-run/dev": "^1.4.0",
    "@remix-run/eslint-config": "^1.4.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/nprogress": "^0.2.0",
    "@types/react": "^17.0.40",
    "@types/react-dom": "^17.0.13",
    "eslint": "^8.11.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.5",
    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "typescript": "^4.6.2"
  },
  "engines": {
    "node": ">=14"
  }
}
